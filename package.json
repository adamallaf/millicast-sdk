{
  "name": "root",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./check-signature.sh"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "build-docs": "nx build-docs @millicast/sdk",
    "build:sdk": "nx watch --projects=@millicast/sdk -- echo \\$NX_PROJECT_NAME \\$NX_FILE_CHANGES",
    "lint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "publish": "lerna publish from-git",
    "start": "nx run-many -t start",
    "start-docs": "nx start-docs @millicast/sdk",
    "test": "nx run-many --target=test --all --parallel --output-style=stream",
    "test-e2e": "nx run-many --target=test-e2e --all --parallel --output-style=stream"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@lerna/publish": "^5.5.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-flowtype": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.8",
    "install": "^0.13.0",
    "lerna": "^8.1.7",
    "lint-staged": "^10.5.4",
    "netlify-cli": "^17.15.6",
    "npm": "^8.11.0",
    "nx": "16.10.0",
    "vite": "^5.2.10"
  }
}